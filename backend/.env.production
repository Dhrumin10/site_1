# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://${MONGO_USER}:${MONGO_PASSWORD}@${MONGO_CLUSTER}.mongodb.net/${MONGO_DB}?retryWrites=true&w=majority
MONGO_USER=your_atlas_username
MONGO_PASSWORD=your_atlas_password
MONGO_CLUSTER=your_cluster_url
MONGO_DB=ravion_lab_prod

# JWT Configuration
JWT_SECRET=your_production_jwt_secret_key
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Frontend URL (for CORS)
FRONTEND_URL=https://your-production-domain.com
CORS_ORIGIN=https://your-production-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Redis Configuration
REDIS_URL=redis://your-production-redis-url:6379
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Email Configuration
SMTP_HOST=smtp.production-email-provider.com
SMTP_PORT=587
SMTP_USER=your_production_email@domain.com
SMTP_PASSWORD=your_production_email_password
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=Ravion Lab

# Logging Configuration
LOG_LEVEL=error
LOG_FORMAT=combined

# Security
COOKIE_SECRET=your_cookie_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9100 